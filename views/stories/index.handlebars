<h2>Stories</h2>

<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">

      <div class="card-image">
        {{#if user}} {{{editIcon user.id ../user.id id}}} {{/if}}
      </div>

      <div class="center">
        <h4>{{title}}</h4>
        <div class="card-content">
          <p>{{stripTags (truncate body 150)}}</p>
        </div>

        <a href="/stories/user/{{user.id}}">
          <div class="chip">
            <img src="{{user.image}}"> {{user.firstName}} {{user.lastName}}
          </div>
        </a>


        <br>
        <div class="card-action">
          <a href="/stories/show/{{id}}">Read More</a>
        </div>

      </div>


    </div>
  </div>
  {{else}}
  <p>Nothing to display</p>
  {{/each}}
</div>
</div>