<div class="row">
  <h3>{{story.title}}</h3>
  <div class="col s6">
    <div class="card">

      <div class="card-content">
        <h5>{{formatDate story.date "MMMM Do YYYY"}}</h5>
        <p>{{stripTags story.body}}</p>

      </div>
    </div>
    {{#if story.allowComments}}

    <div class="card">

      <div class="card-content">
        {{#if user}}
        <form action="/stories/comment/{{story.id}}" method="POST">
          <p>Add comment</p>
          <input type="text" name="commentBody">
          <button type="submit" class="btn">Comment</button>
        </form>{{else}}
        <p>login to leave a comment</p>
        {{/if}}
      </div>


    </div>
    {{#each story.comments}}
    <div class="card">

      <div class="card-content">

        <h5>{{commentBody}}</h5>
        <a href="/stories/user/{{commentUser.id}}">
          <div class="chip">
            <img src="{{commentUser.image}}">{{commentUser.firstName}} {{commentUser.lastName}}
          </div>
        </a>

        <small>Posted at {{formatDate commentDate "MMMM Do YYYY"}}</small>


      </div>


    </div>
    {{/each}} {{else}} {{/if}}
  </div>
  <div class="col s6 m4">
    <div class="card">
      <div class="card-content">

        <h3>{{story.user.firstName}} {{story.user.lastName}} </h3>
        <div class="">
          <img src="{{story.user.image}}" alt="" class="circle responsive-img">

        </div>
        <div class="card-action">
          <a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
        </div>
      </div>
    </div>
  </div>
</div>